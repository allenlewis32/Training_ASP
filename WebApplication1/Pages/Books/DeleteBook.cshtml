@page
@model WebApplication1.Pages.Books.DeleteBookModel
@{
	ViewData["Title"] = "Delete Book";
}

<div id="message">
	@if (Model.message.Length > 0)
	{
		<div class="alert @Model.messageType">
			@Model.message
			<button class="btn-close" onclick="document.getElementById('message').innerHTML=''"></button>
		</div>
	}
</div>

<h5>Are you sure you want to delete this book?</h5>

<form method="post">
	<input type="hidden" name="bookCode" value="@Model.bookCode" />
	<table class="table">
		<thead>
			<tr>
				<th>ID</th>
				<th>Book Name</th>
				<th>Author</th>
				<th>Publication</th>
				<th>Price</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>@Model.book.BookCode</td>
				<td>@Model.book.BookTitle</td>
				<td>@Model.book.Author</td>
				<td>@Model.book.Publication</td>
				<td>@Model.book.Price</td>
				<td><button type="submit" class="btn btn-danger">Yes</button></td>
				<td><button type="button" class="btn btn-primary" onclick="history.back()">No</button></td>
			</tr>
		</tbody>
	</table>
</form>